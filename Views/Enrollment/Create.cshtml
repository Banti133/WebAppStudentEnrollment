@model WebApStudentEnrolment.Models.Enrolment

@{
    ViewData["Title"] = "Create Enrollment";
}

<h1>Create Enrolment</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="StudentId" class="control-label">Student</label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select> 
                @* <input asp-for="StudentId" class="form-control" /> *@
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CourseId" class="control-label">Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select> 
                @* <input asp-for="CourseId" class="form-control" /> *@
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EnrolmentDate" class="control-label">Enrollment Date</label>
                <input asp-for="EnrolmentDate" class="form-control" type="date" />
                <span asp-validation-for="EnrolmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
